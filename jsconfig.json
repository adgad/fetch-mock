{
    "compilerOptions": {
        "lib": [
            "es2021",
            "dom",
            "dom.iterable"
        ],
        "allowJs": true,
        "checkJs": true,
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "strictNullChecks": false,
        "strictFunctionTypes": true,
        "types": [   "node"     ],
        "downlevelIteration": true,
        "forceConsistentCasingInFileNames": true,
        "declaration": true,
        "emitDeclarationOnly": true,
        "outDir": "packages/core/types",
        "skipLibCheck": true,
        "noEmit": false,
        "declarationMap": true
    },
    "include": [
        "./packages/core/src/*.js",
        "./packages/core/src/**/*.js",
    ],
    "exclude": [
        "node_modules",
        "packages/**/src/__tests__"
    ]
}
